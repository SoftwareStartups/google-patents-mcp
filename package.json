{
  "name": "@softwarestartups/google-patents-mcp",
  "version": "1.0.0",
  "description": "MCP server for searching Google Patents via SerpApi",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "google-patents-mcp": "build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "tsc -w & node --watch build/index.js",
    "test": "npm run test:unit",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:unit:watch": "vitest --config vitest.config.ts",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "test:all": "npm run test:unit && npm run test:e2e",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "typecheck": "tsc --noEmit -p tsconfig.eslint.json"
  },
  "keywords": [
    "mcp",
    "serpapi",
    "google patents"
  ],
  "author": "SoftwareStartups (https://softwarestartups.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SoftwareStartups/google-patents-mcp.git"
  },
  "homepage": "https://github.com/SoftwareStartups/google-patents-mcp#readme",
  "bugs": {
    "url": "https://github.com/SoftwareStartups/google-patents-mcp/issues"
  },
  "files": [
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "dotenv": "^16.4.5",
    "node-fetch": "^3.3.2",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/nock": "^10.0.3",
    "@types/node": "^20.14.2",
    "@types/node-fetch": "^2.6.11",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "nock": "^14.0.10",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5",
    "vitest": "^2.0.0"
  }
}
